  <div class="main-content">
  </div>
  <div class="row">
    <div class="col-md-4">
      <br>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="home">
          <form id="tab" action="/changeUser.do" method="post" enctype="multipart/form-data" >
            <div class="form-group">
              <label>账号：</label>
              <input name="account" type="text" value="<%=list[0].account%>" class="form-control">
              <input type="text" hidden name="mg_id" value="<%=list[0].mg_id%>"/>
            </div>
            <div class="form-group">
              <label>姓名</label>
              <input  name="mg_name" type="text" value="<%=list[0].mg_name%>" class="form-control">
            </div>
            <div class="form-group">
              <label>性别</label>
              <span>&nbsp;&nbsp;&nbsp;</span>
              <select name="sex" class="sel_sex" >
                <!--<option>-</option>-->
                <option value=1 class="xb">男</option>
                <option value=0 class="xb">女</option>

              </select>
            </div>
            <div class="form-group">
              <label>出生日期</label>
              <!--<input type="text" value="jsmith@yourcompany.com" class="form-control">-->
              <span>&nbsp;&nbsp;&nbsp;</span>
              <select name="year" class="sel_year" rel="<%=list[0].birth.getFullYear()%>"></select> 年
              <select name="month" class="sel_month" rel="<%=(list[0].birth.getMonth())+1%>"></select> 月
              <select name="day" class="sel_day" rel="<%=list[0].birth.getDate()%>"></select> 日
            </div>

            <div class="form-group">
              <label>角色</label>
              <span>&nbsp;&nbsp;&nbsp;</span>
              <select name="role">
                <%for(var i= 0;i<lists.length;i++){%>
                  <option class="yg" value="<%=lists[i].role_id%>"><%=lists[i].role_name%></option>
                <%}%>
              </select>
            </div>

            <div class="form-group">
              <label>状态</label>
              <span>&nbsp;&nbsp;&nbsp;</span>
              <select name="status">
                <option class="zt">正常</option>
                <option class="zt">禁用</option>

              </select>
            </div>
            <div class="form-group">
              <label>头像</label>
              <input type="file"  class="form-control"  name="head_imgurl" multiple>
            </div>
            <div class="btn-toolbar list-toolbar">
              <button id="changeuser" class="btn btn-primary"><i class="fa fa-save"></i> 保存</button>
              <!--<a href="#myModal" data-toggle="modal" class="btn btn-danger">删除</a>-->
            </div>
          </form>
        </div>

        <div class="tab-pane fade" id="profile">

          <form id="tab2">
            <div class="form-group">
              <label>New Password</label>
              <input type="password" class="form-control">
            </div>
            <div>
              <button class="btn btn-primary">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal small fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
