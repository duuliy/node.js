<div class="content">
  <div class="header">
    <h1 class="page-title">修改功能</h1>
    <ul class="breadcrumb">
      <li><a href="#">字典管理</a></li>
      <li><a href="/actions.do">功能管理</a></li>
      <li class="active">修改功能</li>
    </ul>
  </div>
  <div class="main-content">
  </div>

  <div class="row">
    <div class="col-md-4">
      <br>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="home">
          <!-- 新增功能表单-->
          <form id="tab">
            <div class="form-group">
              <label>功能编号</label>
              <input type="text" class="form-control" id="a_id" name="ac_id" value="<%=editlist[0].act_id%>"disabled>
            </div>
            <div class="form-group">
              <label>功能名称</label>
              <input type="text" class="form-control" id="a_name" name="ac_name" value="<%=editlist[0].act_name%>">
            </div>
            <div class="form-group">
              <label>功能简述</label>
              <textarea rows="3" class="form-control" id="a_info" name="ac_info"><%=editlist[0].info%></textarea>
            </div>
            <!-- 上传文件-->
            <div class="form-group">
              <label>主图地址</label>
              <input type="file" class="form-control" id="a_imgurl" name="ac_imgurl" multiple placeholder="<%=editlist[0].main_path%>">
            </div>
            <div class="form-group">
              <label>金额</label>
              <input type="number"  class="form-control" id="a_price" name="ac_price" value="<%=editlist[0].price%>">
            </div>
            <div class="form-group">
              <label>功能全述</label>
              <textarea rows="10" class="form-control" id="a_desc" name="ac_desc"><%=editlist[0].act_all_info%></textarea>
            </div>

            <div class="btn-toolbar list-toolbar">
              <button type="button" class="btn btn-primary" onclick="saveChange()"><i class="fa fa-save"></i> 保存</button>
              <a href="#myModal" data-toggle="modal" class="btn btn-danger">取消</a>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>

