<script>

  function saveChange(){
    let ac_id=$("#a_id").val();
    let ac_info=$("#a_info").val();
    let ac_name=$("#a_name").val();
    let ac_imgurl=$("#a_imgurl").val();
    let ac_price=$("#a_price").val();
    let ac_desc=$("#a_desc").val();
    console.log(ac_id);
    console.log(ac_desc);
    $.ajax({
      type:"post",
      url:"/updateAction.do",
      data: {
        ac_id:ac_id,
        ac_name: ac_name,
        ac_info: ac_info,
        ac_imgurl: ac_imgurl,
        ac_price: ac_price,
        ac_desc: ac_desc
      },
      success:function(){
        window.location.href="/actions.do";
      }
    });
  }
</script>
